{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Node.js Server",
            "type": "shell",
            "command": "npm",
            "args": [
                "start"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Stop Node.js Server",
            "type": "process",
            "command": "${command:workbench.action.tasks.terminate}",
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "panel": "new"
            }
        }
    ]
}
